// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Categories{
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  hats    Category
  jackets Category
  sneakers Category
  womens Category
  mens Category
}

type Category {
  name     String
  products Product[]
}

type Product {
  id          String
  name        String
  image       String
  price       Int
}







